{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Name": {
      "type": "string",
      "metadata": {
        "description": "Name of the load balancer"
      }
    },
    "Condition": {
      "type": "bool",
      "metadata": {
        "description": "Set to True if NICs need to be created"
      }
    },
    "LBCondition": {
      "type": "bool",
      "metadata": {
        "description": "Set to True if LB needs to be created"
      }
    },
    "Count": {
      "type": "int",
      "metadata": {
        "description": "Same as number of VMs in the main template"
      }
    },
    "subnet1Ref": {
      "type": "string",
      "metadata": {
        "description": "Reference to the subnet"
      }
    },
    "Location": {
      "type": "string",
      "metadata": {
        "description": "Location of the load balancer"
      }
    }
  },
  "variables": {
    "LBName": "[concat(parameters('Name'), 'lb')]",
    "LBID": "[resourceId('Microsoft.Network/loadBalancers', variables('LBName'))]",
    "LBPIPID": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Name'), '-pip'))]",
    "FrontEndIPConfigID": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('LBName')),'/frontendIPConfigurations/LoadBalancerFrontEnd')]",
    "LBPoolID": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('LBName')),'/backendAddressPools/BackendPool1')]",
    "LBProbeID": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('LBName')),'/probes/tcpProbe')]"
  },
  "resources": [
    {
      "condition": "[if(equals(parameters('Condition'), parameters('LBCondition')), bool('true'), bool('false'))]",
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(parameters('Name'), '-pip')]",
      "location": "[parameters('Location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "condition": "[parameters('Condition')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('Name'), 'nic', copyindex(1))]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('Location')]",
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('Count')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/loadBalancers/', variables('LBName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnet1Ref')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('LBID'), '/backendAddressPools/BackendPool1')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "condition": "[if(equals(parameters('Condition'), parameters('LBCondition')), bool('true'), bool('false'))]",
      "apiVersion": "2015-05-01-preview",
      "name": "[variables('LBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('Location')]",
      "dependsOn": [
        "[variables('LBPIPID')]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "LoadBalancerFrontEnd",
            "properties": {
              "publicIPAddress": {
                "id": "[variables('LBPIPID')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "BackendPool1"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "LBRule",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('FrontEndIPConfigID')]"
              },
              "backendAddressPool": {
                "id": "[variables('LBPoolID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[variables('LBProbeID')]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "tcpProbe",
            "properties": {
              "protocol": "Tcp",
              "port": 80,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}
